{
    "name": "DEV-SERVER-BOX",
    "dockerComposeFile": "../docker-compose.yaml", // Reference the external docker-compose.yaml
    "service": "dev-server", // Update to match the service name in docker-compose.yaml
    "image": "wn1980/dev-server-box:amd64",
    "build": {
        "dockerfile": "../Dockerfile", // Reference the external Dockerfile
        "context": "..", // Set the build context to the parent directory
        "args": {
            "HOST_DOCKER_GID": "${localEnv:HOST_DOCKER_GID||988}" // Default to 988 if not set
        }
    },
    "workspaceFolder": "/workspace", // Match the workspace folder in the container

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "Postman.postman-for-vscode",
                "ritwickdey.LiveServer",
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint",
                "EditorConfig.EditorConfig",
                "google.geminicodeassist"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/opt/miniconda/bin/python"
            }
        }
    },
    
    "remoteUser": "ubuntu" // Ensure this matches the user in the Dockerfile
}
